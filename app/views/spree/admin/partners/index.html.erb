<% content_for :page_title do %>
  <%= plural_resource_name(Spree::Partner) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new_partner), new_object_url, { :class => "btn-success", :icon => 'add', :id => 'admin_new_partner' } %>
<% end if can? :create, Spree::Partner %>

<table class="table" id='listing_partners' data-hook>
  <thead>
    <tr data-hook="tax_header">
      <th><%= Spree.t(:partner_name) %></th>
      <th><%= I18n.t('partner.percents') %></th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @partners.each do |partner| %>
      <tr id="<%= spree_dom_id partner %>" data-hook="country_row">
        <td><%= partner.name %></td>
        <td><%= partner.percents %></td>

        <td class="actions actions-2 text-right">
          <%= link_to_edit(partner, :no_text => true) if can? :edit, partner %>
          <%= link_to_delete(partner, :no_text => true) if can? :delete, partner %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
