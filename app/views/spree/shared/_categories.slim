- if current_page?(spree.root_url)
  .container
    .row
      .col-md-12
        h4.category-title Категории товаров
      .wrapper
        - rows = (@taxonomies.length * 0.25).ceil
        - @taxonomies.each do |category|
         = render :partial => "spree/shared/category", :locals => {:category => category}

