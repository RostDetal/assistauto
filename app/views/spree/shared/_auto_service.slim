  .container
    .row
      .col-sm-4.col-md-2
        .thumbnail.text-center.text-uppercase.no-outline.autoservice-thumbail
          =link_to image_tag(asset_path('general/car-service.svg'), size: '65x65'), '#tab1', 'data-toggle': "tab"
          a data-toggle="tab" href='#tab1'  Автосервис
      .col-sm-4.col-md-2
        .thumbnail.text-center.text-uppercase.no-outline.autoservice-thumbail
          =link_to image_tag(asset_path('general/check.svg'), size: '65x65'), '#tab2', 'data-toggle': "tab"
          a data-toggle="tab" href='#tab2' Диагностика
      .col-sm-4.col-md-2
        .thumbnail.text-center.text-uppercase.no-outline.autoservice-thumbail
          =link_to image_tag(asset_path('general/oil.svg'), size: '65x65', class: 'fill-color'), '#tab3', 'data-toggle': "tab"
          a data-toggle="tab" href='#tab3'  Замена масла
      .col-sm-4.col-md-2
        .thumbnail.text-center.text-uppercase.no-outline.autoservice-thumbail
