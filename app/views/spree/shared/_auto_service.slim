          a data-toggle="tab" href='#tab4'  Шиномонтаж
      .col-sm-4.col-md-2
        .thumbnail.text-center.text-uppercase.no-outline.autoservice-thumbail
          =link_to image_tag(asset_path('general/tool.svg'), size: '65x65'), '#tab5', 'data-toggle': "tab"
          a data-toggle="tab" href='#tab5'  Ремонт
      .col-sm-4.col-md-2
        .thumbnail.text-center.text-uppercase.no-outline.autoservice-thumbail
          =link_to image_tag(asset_path('general/store.svg'), size: '65x65'), '#tab6', 'data-toggle': "tab"
          a data-toggle="tab" href='#tab5'  Магазин
.container
  .row
    .tab-content.col-sm-9
      .tab-pane.active id="tab1" Автосервис
      .tab-pane id="tab2" Диагностика
      .tab-pane id="tab3" Замена масла
      .tab-pane id="tab4" Шиномонтаж
